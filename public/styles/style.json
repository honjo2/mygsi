{
  "version": 7,
  "name": "Bright",
  "constants": {
    "@sans": "Open Sans Regular, Arial Unicode MS Regular",
    "@sans_it": "Open Sans Italic, Arial Unicode MS Regular",
    "@sans_md": "Open Sans Semibold, Arial Unicode MS Bold",
    "@sans_bd": "Open Sans Bold, Arial Unicode MS Bold",
    "@land": "#f8f4f0",
    "@water": "#a0c8f0",
    "@platform": "#dc7878",
    "@school": "#f0e8f8",
    "@building": "#f2eae2",
    "@building_shadow": "#dfdbd7",
    "@building_color_transition": {
      "base": 1,
      "stops": [[15.5, "#f2eae2"], [16, "#dfdbd7"]]
    },
    "@building_opacity": {
      "base": 1,
      "stops": [[15, 0], [16, 1]]
    },
    "@motorway": "#fc8",
    "@motorway_casing": "#e9ac77",
    "@street": "#fff",
    "@street_casing": "#cfcdca",
    "@rail": "#bbb",
    "@text": "#334",
    "@text_halo": "rgba(255,255,255,0.8)",
    "@marine_text": "#74aee9",
    "@marine_text_halo": "rgba(255,255,255,0.7)",
    "@poi_text": "#666",
    "@poi_text_halo": "#ffffff",
    "@maki": "#666",
    "@point_translate": [0, -30],
    "@tunnel_line_dasharray": [0.5, 0.25],
    "@motorway_width": {
      "base": 1.2,
      "stops": [[6.5, 0], [7, 0.5], [20, 18]]
    },
    "@motorway_casing_width": {
      "base": 1.2,
      "stops": [[5, 0.4], [6, 0.6], [7, 1.5], [20, 22]]
    },
    "@motorway_link_width": {
      "base": 1.2,
      "stops": [[12.5, 0], [13, 1.5], [20, 10]]
    },
    "@motorway_link_casing_width": {
      "base": 1.2,
      "stops": [[12, 1], [13, 3], [20, 13]]
    },
    "@main_width": {
      "base": 1.2,
      "stops": [[6.5, 0], [7, 0.5], [20, 14]]
    },
    "@main_casing_width": {
      "base": 1.2,
      "stops": [[5, 0.1], [6, 0.2], [7, 1.5], [20, 18]]
    },
    "@street_width": {
      "base": 1.2,
      "stops": [[13.5, 0], [14, 2.5], [20, 11.5]]
    },
    "@street_casing_width": {
      "base": 1.2,
      "stops": [[12, 0.5], [13, 1], [14, 4], [20, 15]]
    },
    "@street_casing_opacity": {
      "stops": [[12, 0], [12.5, 1]]
    },
    "@service_casing_width": {
      "base": 1.2,
      "stops": [[15, 1], [16, 4], [20, 11]]
    },
    "@service_width": {
      "base": 1.2,
      "stops": [[15.5, 0], [16, 2], [20, 7.5]]
    },
    "@rail_width": {
      "base": 1.4,
      "stops": [[14, 0.4], [15, 0.75], [20, 2]]
    },
    "@rail_hatch_width": {
      "base": 1.4,
      "stops": [[14.5, 0], [15, 3], [20, 8]]
    },
    "@rail_hatch_line_dasharray": [0.3, 4],
    "@admin_level_3_width": {
      "base": 1,
      "stops": [[4, 0.4], [5, 1], [12, 3]]
    }
  },
  "sources": {
    "mapion": {
      "type": "vector",
      "url": "/styles/source.json"
    }
  },
  "sprite": "/styles/bright",
  "glyphs": "mapbox://fontstack/{fontstack}/{range}.pbf",
  "layers": [{
    "id": "background",
    "type": "background",
    "paint": {
      "background-color": "@land"
    }

  }, {
    "id": "railway_platform",
    "type": "fill",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "railway", "platform"],
    "paint": {
      "fill-color": "@platform"
    }

  }, {
    "id": "landuse_school",
    "type": "fill",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "boundary", "administrative"],
    "paint": {
      "fill-color": "@school"
    }
  }, {
    "id": "waterway_river",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "filter": ["==", "waterway", "river"],
    "layout": {
      "line-cap": "round"
    },
    "paint": {
      "line-color": "@water",
      "line-width": {
        "base": 1.2,
        "stops": [[11, 0.5], [20, 6]]
      }
    }


  }, {
    "id": "water",
    "type": "fill",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "natural", "water"],
    "paint": {
      "fill-color": "@water"
    }
  }, {
    "id": "water_offset",
    "type": "fill",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "natural", "water"],
    "paint": {
      "fill-color": "white",
      "fill-opacity": 0.3,
      "fill-translate": [0, 2.5]
    }
  }, {
    "id": "water_pattern",
    "ref": "water",
    "paint": {
      "fill-image": "wave",
      "fill-translate": [0, 2.5]
    }
  }, {
    "id": "water_label",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "natural", "water"],
    "layout": {
      "text-font": "@sans",
      "text-field": "{name}",
      "text-max-size": 13,
      "text-anchor": "center"
    },
    "paint": {
      "text-color": "#765",
      "text-halo-color": "#fff",
      "text-halo-width": 1,
      "text-halo-blur": 0.5,
      "text-size": {
        "stops": [[13, 12], [14, 13]]
      }
    }
  }, {
    "id": "building",
    "type": "fill",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "building", "yes"],
    "paint": {
      "fill-color": "@building_color_transition"
    }
  }, {
    "id": "building_top",
    "ref": "building",
    "paint": {
      "fill-color": "@building",
      "fill-opacity": "@building_opacity",
      "fill-translate": {
        "stops": [[15, [0, 0]], [16, [-2, -2]]],
        "base": 1
      },
      "fill-outline-color": "@building_shadow"
    }
  }, {
    "id": "building_label",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "polygon",
    "filter": ["==", "building", "yes"],
    "layout": {
      "text-font": "@sans",
      "text-field": "{name}",
      "text-max-size": 13,
      "text-anchor": "center"
    },
    "paint": {
      "text-color": "#765",
      "text-halo-color": "#fff",
      "text-halo-width": 1,
      "text-halo-blur": 0.5,
      "text-size": {
        "stops": [[13, 12], [14, 13]]
      }
    }
  }, {
    "id": "line_highway_residential_casing",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "minzoom": 5,
    "filter": ["in", "highway", "residential", "living_street", "tertiary", "unclassified"],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "@street_casing",
      "line-width": "@street_casing_width"
    }
  }, {
    "id": "line_highway_residential",
    "ref": "line_highway_residential_casing",
    "paint": {
      "line-color": "@street",
      "line-width": "@street_width"
    }



 }, {
    "id": "route_road_casing",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "minzoom": 5,
    "filter": ["all", ["==", "highway", "secondary"]],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "@motorway_casing",
      "line-width": "@motorway_casing_width"
    }
  }, {
    "id": "route_road",
    "ref": "route_road_casing",
    "paint": {
      "line-color": "@motorway",
      "line-width": "@motorway_width"
    }
  }, {
    "id": "route_road_label",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "line",
    "filter": ["==", "highway", "secondary"],
    "layout": {
      "text-font": "@sans",
      "text-field": "{name}",
      "text-max-size": 13,
      "symbol-placement": "line"
    },
    "paint": {
      "text-color": "#765",
      "text-halo-color": "#fff",
      "text-halo-width": 1,
      "text-halo-blur": 0.5,
      "text-size": {
        "stops": [[13, 12], [14, 13]]
      }
    }


  }, {
    "id": "road_motorway_casing",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "minzoom": 5,
    "filter": ["all", ["==", "highway", "motorway"]],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "@motorway_casing",
      "line-width": "@motorway_casing_width"
    }
  }, {
    "id": "road_motorway",
    "ref": "road_motorway_casing",
    "paint": {
      "line-color": "@motorway",
      "line-width": "@motorway_width"
    }
  }, {
    "id": "road_label_highway_shields",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "line",
    "filter": ["all", ["==", "highway", "motorway"], ["in", "reflen", 1, 2, 3, 4, 5, 6]],
    "layout": {
      "symbol-placement": "line",
      "symbol-min-distance": 500,
      "icon-image": "motorway_{reflen}",
      "icon-max-size": 1,
      "text-field": "{ref}",
      "text-font": "@sans_bd",
      "text-max-size": 11,
      "text-rotation-alignment": "viewport",
      "icon-rotation-alignment": "viewport"
    },
    "paint": {
      "text-color": "#765",
      "text-size": 11
    }
  }, {
    "id": "road_label",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "line",
    "filter": ["==", "highway", "motorway"],
    "layout": {
      "text-font": "@sans",
      "text-field": "{name}",
      "text-max-size": 13,
      "symbol-placement": "line"
    },
    "paint": {
      "text-color": "#765",
      "text-halo-color": "#fff",
      "text-halo-width": 1,
      "text-halo-blur": 0.5,
      "text-size": {
        "stops": [[13, 12], [14, 13]]
      }
    }


  }, {
    "id": "line_railway",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "minzoom": 5,
    "filter": ["==", "route", "railway"],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "@rail",
      "line-width": "@rail_width"
    }
  }, {
    "id": "line_railway_hatching",
    "ref": "line_railway",
    "paint": {
      "line-color": "@rail",
      "line-dasharray": "@rail_hatch_line_dasharray",
      "line-width": "@rail_hatch_width"
    }

  }, {
    "id": "line_rail",
    "type": "line",
    "source": "mapion",
    "source-layer": "line",
    "minzoom": 5,
    "filter": ["==", "railway", "rail"],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "@rail",
      "line-width": "@rail_width"
    }
  }, {
    "id": "line_rail_hatching",
    "ref": "line_rail",
    "paint": {
      "line-color": "@rail",
      "line-dasharray": "@rail_hatch_line_dasharray",
      "line-width": "@rail_hatch_width"
    }



  }, {
    "id": "place_label_other",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "point",
    "filter": ["in", "amenity", "hamlet", "cafe", "neighbourhood", "post_office"],
    "layout": {
      "text-font": "@sans_bd",
      "text-transform": "uppercase",
      "text-letter-spacing": 0.1,
      "text-field": "{name}",
      "text-max-size": 14,
      "text-max-width": 9
    },
    "paint": {
      "text-color": "#633",
      "text-halo-color": "@text_halo",
      "text-halo-width": 1.2,
      "text-size": {
        "base": 1.2,
        "stops": [[12, 10], [15, 14]]
      }
    }
  }, {
    "id": "poi_label_1",
    "type": "symbol",
    "source": "mapion",
    "source-layer": "point",
    "minzoom": 13,
    "filter": ["all", ["==", "$type", "Point"]],
    "layout": {
      "icon-image": "{amenity}-12",
      "text-font": "@sans_md",
      "text-field": "{name}",
      "text-max-size": 12,
      "text-max-width": 9,
      "text-padding": 2,
      "text-offset": [0, 0.6],
      "text-anchor": "top"
    },
    "paint": {
      "text-color": "@poi_text",
      "text-size": 12,
      "text-halo-color": "@poi_text_halo",
      "text-halo-width": 1,
      "text-halo-blur": 0.5
    }
  }]
}
